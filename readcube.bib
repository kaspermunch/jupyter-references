@article{10.1038/ng.3039, 
year = {2014}, 
title = {{Most genetic risk for autism resides with common variation}}, 
author = {Gaugler, Trent and Klei, Lambertus and Sanders, Stephan J and Bodea, Corneliu A and Goldberg, Arthur P and Lee, Ann B and Mahajan, Milind and Manaa, Dina and Pawitan, Yudi and Reichert, Jennifer and Ripke, Stephan and Sandin, Sven and Sklar, Pamela and Svantesson, Oscar and Reichenberg, Abraham and Hultman, Christina M and Devlin, Bernie and Roeder, Kathryn and Buxbaum, Joseph D}, 

keywords = {}
}
@article{10.1186/s13059-018-1509-y, 
year = {2018}, 
title = {{Mutational signature distribution varies with DNA replication timing and strand asymmetry}}, 
author = {Tomkova, Marketa and Tomek, Jakub and Kriaucionis, Skirmantas and Schuster-Böckler, Benjamin}, 
journal = {Genome Biology}, 

title = {{Ancient Out-of-Africa Mitochondrial DNA Variants Associate with Distinct Mitochondrial Gene Expression Patterns}}, 
author = {Cohen, Tal and Levin, Liron and Mishmar, Dan}, 
journal = {PLoS Genetics}, 
issn = {1553-7390}, 

@article{10.1371/journal.pgen.1002837, 
year = {2012}, 
title = {{Genomic data reveal a complex making of humans.}}, 
author = {Alves, Isabel and Hanulová, Anna and Foll, Matthieu and Excoffier, Laurent}, 

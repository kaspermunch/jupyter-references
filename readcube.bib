title = {{A high-density SNP-based linkage map of the chicken genome reveals sequence features correlated with recombination rate}}, 
author = {Groenen, Martien and Wahlberg, Per and Foglio, Mario and Cheng, Hans H and Megens, Hendrik-Jan and Crooijmans, Richard and Besnier, Francois and Lathrop, Mark and Muir, William M and Wong, Gane and Gut, Ivo and Andersson, Leif}, 
journal = {Genome Research}, 
issn = {1088-9051}, 

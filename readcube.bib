@article{10.1371/journal.pgen.1004242, 
year = {2014}, 
title = {{FRA2A Is a CGG Repeat Expansion Associated with Silencing of AFF3}}, 
author = {Metsu, Sofie and Rooms, Liesbeth and Rainger, Jacqueline and Taylor, Martin S. and Bengani, Hemant and Wilson, David I. and Chilamakuri, Chandra Sekhar Reddy and Morrison, Harris and Vandeweyer, Geert and Reyniers, Edwin and Douglas, Evelyn and Thompson, Geoffrey and Haan, Eric and Gecz, Jozef and FitzPatrick, David R. and Kooy, R. Frank}, 

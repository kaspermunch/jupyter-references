@article{10.1534/genetics.107.079665, 
year = {2008}, 
title = {{Recombination map of the common shrew, Sorex araneus (Eulipotyphla, Mammalia).}}, 
author = {Borodin, Pavel M and Karamysheva, Tatyana V and Belonogova, Nadezhda M and Torgasheva, Anna A and Rubtsov, Nikolai B and Searle, Jeremy B}, 
journal = {Genetics}, 
issn = {0016-6731}, 

@article{10.1534/genetics.106.055871, 
year = {2006}, 
title = {{Construction of a 10,000-Marker Ultradense Genetic Recombination Map of Potato: Providing a Framework for Accelerated Gene Isolation and a Genomewide Physical Map}}, 
author = {Os, Hans van and Andrzejewski, Sandra and Bakker, Erin and Barrena, Imanol and Bryan, Glenn J and Caromel, Bernard and Ghareeb, Bilal and Isidore, Edwige and Jong, Walter de and Koert, Paul van and Lefebvre, Véronique and Milbourne, Dan and Ritter, Enrique and Voort, Jeroen van der and Rousselle-Bourgeois, Françoise and Vliet, Joke van and Waugh, Robbie and Visser, Richard GF and Bakker, Jaap and Eck, Herman J van}, 

@article{10.1038/hdy.2009.151, 
year = {2009}, 
title = {{Islands of speciation or mirages in the desert? Examining the role of restricted recombination in maintaining species}}, 
author = {Noor, MAF and Bennett}, 
journal = {Heredity}, 
issn = {0018-067X}, 

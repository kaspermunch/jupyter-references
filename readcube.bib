year = {2011}, 
title = {{Cactus: Algorithms for genome multiple sequence alignment}}, 
author = {Paten, Benedict and Earl, Dent and Nguyen, Ngan and Diekhans, Mark and Zerbino, Daniel and Haussler, David}, 

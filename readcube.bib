@article{10.1111/j.1558-5646.2011.01450.x, 
year = {2012}, 
title = {{The effect of deleterious mutations and age on recombination in Drosophila melanogaster.}}, 
author = {Tedman-Aucoin, Katherine and Agrawal, Aneil F}, 
journal = {Evolution; international journal of organic evolution}, 
issn = {0014-3820}, 
doi = {10.1111/j.1558-5646.2011.01450.x}, 

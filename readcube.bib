@article{10.1371/journal.pgen.1004503, 
year = {2014}, 
title = {{Recombination in the Human Pseudoautosomal Region PAR1}}, 
author = {Hinch, Anjali G and Altemose, Nicolas and Noor, Nudrat and Donnelly, Peter and Myers, Simon R}, 

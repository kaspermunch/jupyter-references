@article{10.1074/jbc.m611279200, 
year = {2007}, 
title = {{The DYNLT3 Light Chain Directly Links Cytoplasmic Dynein to a Spindle Checkpoint Protein, Bub3*}}, 
author = {Lo, Kevin W.-H. and Kogoy, John M. and Pfister, K. Kevin}, 
journal = {Journal of Biological Chemistry}, 

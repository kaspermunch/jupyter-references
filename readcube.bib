author = {Wall, Jeffrey D and Yang, Melinda A and Jay, Flora and Kim, Sung K and Durand, Eric Y and Stevison, Laurie S and Gignoux, Christopher and Woerner, August and Hammer, Michael F and Slatkin, Montgomery}, 
journal = {Genetics}, 
issn = {0016-6731}, 

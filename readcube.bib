@article{10.1371/journal.pbio.1001899, 
year = {2014}, 
title = {{Sex Determination: Why So Many Ways of Doing It?}}, 
author = {Bachtrog, Doris and Mank, Judith E and Peichel, Catherine L and Kirkpatrick, Mark and Otto, Sarah P and Ashman, Tia-Lynn and Hahn, Matthew W and Kitano, Jun and Mayrose, Itay and Ming, Ray and Perrin, Nicolas and Ross, Laura and Valenzuela, Nicole and Vamosi, Jana C}, 
journal = {PLoS Biology}, 
issn = {1544-9173}, 
doi = {10.1371/journal.pbio.1001899}, 
pmid = {24983465}, 
abstract = {{Sexual reproduction is an ancient feature of life on earth, and the familiar X and Y chromosomes in humans and other model species have led to the impression that sex determination mechanisms are old and conserved. In fact, males and females are determined by diverse mechanisms that evolve rapidly in many taxa. Yet this diversity in primary sex-determining signals is coupled with conserved molecular pathways that trigger male or female development. Conflicting selection on different parts of the genome and on the two sexes may drive many of these transitions, but few systems with rapid turnover of sex determination mechanisms have been rigorously studied. Here we survey our current understanding of how and why sex determination evolves in animals and plants and identify important gaps in our knowledge that present exciting research opportunities to characterize the evolutionary forces and molecular pathways underlying the evolution of sex determination.}}, 
number = {7}, 
volume = {12}, 

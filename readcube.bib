title = {{A Cluster of Autism-Associated Variants on X-Linked NLGN4X Functionally Resemble NLGN4Y}}, 
author = {Nguyen, Thien A. and Wu, Kunwei and Pandey, Saurabh and Lehr, Alexander W. and Li, Yan and Bemben, Michael A. and Badger, John D. and Lauzon, Julie L. and Wang, Tongguang and Zaghloul, Kareem A. and Thurm, Audrey and Jain, Mahim and Lu, Wei and Roche, Katherine W.}, 

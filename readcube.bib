title = {{Genomewide ancestry and divergence patterns from low‐coverage sequencing data reveal a complex history of admixture in wild baboons}}, 
author = {Wall, Jeffrey D and Schlebusch, Stephen A and Alberts, Susan C and Cox, Laura A and Snyder‐Mackler, Noah and Nevonen, Kimberly A and Carbone, Lucia and Tung, Jenny}, 

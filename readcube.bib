author = {Robinson, Jacqueline A. and Belsare, Saurabh and Birnbaum, Shifra and Newman, Deborah E. and Chan, Jeannie and Glenn, Jeremy P. and Ferguson, Betsy and Cox, Laura A. and Wall, Jeffrey D.}, 
journal = {Genome Research}, 
issn = {1088-9051}, 

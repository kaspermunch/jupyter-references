title = {{Meiotic sex chromosome inactivation and the XY body: a phase separation hypothesis}}, 
author = {Alavattam, Kris G. and Maezawa, So and Andreassen, Paul R. and Namekawa, Satoshi H.}, 
journal = {Cellular and Molecular Life Sciences}, 

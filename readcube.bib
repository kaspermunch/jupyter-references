@article{10.1016/j.tree.2016.02.001, 
year = {2016}, 
title = {{The Ecology and Evolutionary Dynamics of Meiotic Drive}}, 
author = {Lindholm, Anna K and Dyer, Kelly A and Firman, Renée C and Fishman, Lila and Forstmeier, Wolfgang and Holman, Luke and Johannesson, Hanna and Knief, Ulrich and Kokko, Hanna and Larracuente, Amanda M and Manser, Andri and Montchamp-Moreau, Catherine and Petrosyan, Varos G and Pomiankowski, Andrew and Presgraves, Daven C and Safronova, Larisa D and Sutter, Andreas and Unckless, Robert L and Verspoor, Rudi L and Wedell, Nina and Wilkinson, Gerald S and Price, Tom}, 

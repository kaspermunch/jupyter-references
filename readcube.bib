title = {{A genome-scale CRISPR screen reveals factors regulating Wnt-dependent renewal of mouse gastric epithelial cells}}, 
author = {Murakami, Kazuhiro and Terakado, Yumi and Saito, Kikue and Jomen, Yoshie and Takeda, Haruna and Oshima, Masanobu and Barker, Nick}, 

@article{10.1101/2019.12.13.876136, 
year = {2019}, 
title = {{Background selection does not mimic the patterns of genetic diversity produced by selective sweeps}}, 
author = {Schrider, Daniel R}, 
journal = {bioRxiv}, 
doi = {10.1101/2019.12.13.876136}, 
abstract = {{1AbstractIt is increasingly evident that natural selection plays a prominent role in shaping patterns of diversity across the genome. The most commonly studied modes of natural selection are positive selection and negative selection, which refer to directional selection for and against derived mutations, respectively. Positive selection can result in hitchhiking (HH) events, in which a beneficial allele rapidly replaces all others in the population, creating a valley of diversity around the selected site along with characteristic skews in allele frequencies and linkage disequilibrium (LD) among linked neutral polymorphisms. Similarly, negative selection reduces variation not only at selected sites but also at linked sites—a phenomenon called background selection (BGS). Thus, discriminating between these two forces may be difficult, and one might expect efforts to detect HH to produce an excess of false positives in regions affected by BGS. Here, we examine the similarity between BGS and HH models via simulation. First, we show that BGS may somewhat resemble HH in simplistic scenarios in which a region constrained by negative selection is flanked by large stretches of unconstrained sites, echoing previous results. However, this scenario does not mirror the actual spatial arrangement of selected sites across the genome. By performing forward simulations under more realistic scenarios of BGS modeling the locations of protein-coding and conserved noncoding DNA in real genomes, we show that the spatial patterns of variation produced by BGS rarely mimic those left behind by HH events. Indeed, regions experiencing BGS are not substantially more likely than neutrally evolving regions to produce false signatures of HH. This holds for simulations modeled after both humans and Drosophila, and for several different demographic histories. These results demonstrate that HH and BGS models should be readily be separable in practice, and that appropriately designed scans for HH events need not consider background selection as an alternative model.}}, 
pages = {2019.12.13.876136}, 
keywords = {}
}

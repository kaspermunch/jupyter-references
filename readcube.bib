@article{10.1016/j.ajhg.2021.01.002, 
year = {2021}, 
title = {{Deleterious variants in X-linked CFAP47 induce asthenoteratozoospermia and primary male infertility}}, 
author = {Liu, Chunyu and Tu, Chaofeng and Wang, Lingbo and Wu, Huan and Houston, Brendan J. and Mastrorosa, Francesco K. and Zhang, Wen and Shen, Ying and Wang, Jiaxiong and Tian, Shixiong and Meng, Lanlan and Cong, Jiangshan and Yang, Shenmin and Jiang, Yiwen and Tang, Shuyan and Zeng, Yuyan and Lv, Mingrong and Lin, Ge and Li, Jinsong and Saiyin, Hexige and He, Xiaojin and Jin, Li and Touré, Aminata and Ray, Pierre F. and Veltman, Joris A. and Shi, Qinghua and O’Bryan, Moira K. and Cao, Yunxia and Tan, Yue-Qiu and Zhang, Feng}, 

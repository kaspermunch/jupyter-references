year = {2018}, 
title = {{Single-Cell RNA Sequencing Analysis Reveals Sequential Cell Fate Transition during Human Spermatogenesis}}, 
author = {Wang, Mei and Liu, Xixi and Chang, Gang and Chen, Yidong and An, Geng and Yan, Liying and Gao, Shuai and Xu, Yanwen and Cui, Yueli and Dong, Ji and Chen, Yuhan and Fan, Xiaoying and Hu, Yuqiong and Song, Ke and Zhu, Xiaohui and Gao, Yun and Yao, Zhaokai and Bian, Shuhui and Hou, Yu and Lu, Jiahao and Wang, Rui and Fan, Yong and Lian, Ying and Tang, Wenhao and Wang, Yapeng and Liu, Jianqiao and Zhao, Lianming and Wang, Luyu and Liu, Zhaoting and Yuan, Renpei and Shi, Yujia and Hu, Boqiang and Ren, Xiulian and Tang, Fuchou and Zhao, Xiao-Yang and Qiao, Jie}, 
